extends layout

block content
  if (config.title)
   h2=config.title
  if (config.description)
   p=config.description
  else
   h2 DataSift Sample Data 
  != page.html
  if (stats)
   ul
    li Total Volume: 
     =JSON.stringify(stats.volume)
    li Range Start: 
     =stats.first.toString()
    li Range End: 
     =stats.last.toString()
    if(config.share_csdl_link)
     li CSDL Filter: 
      a(href= config.share_csdl_link, target='_blank')= config.share_csdl_link
      
   .well
      h1 All CSV Data
      p
        | Download all aggregated CSV data.
      p
        a.btn.btn-primary(href='all_csv_files.zip') Download      